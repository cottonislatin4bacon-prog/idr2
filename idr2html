	<script>

			// helper function to display the additional sentences letter by letter
			function typeWriterEffect(element, text, delay) {
				let i = 0;
				element.innerHTML = ""
				const timer = setInterval(function() {
					element.innerHTML += text.charAt(i);
					i++;
					if (i > text.length - 1) {
						clearInterval(timer);
					}
				}, delay);
			}

			  const additionalSentences = [
					"this message has no content.",
					"deleting history.",
					"how to quickly and easily clear mucus from lungs &."
			  ];

			  // function to check if the user has scrolled to a certain distance
			  function checkScrollDistance() {
			    const distanceFromTop = window.pageYOffset || document.documentElement.scrollTop;
			    if (distanceFromTop > 600) { // change 500 to the distance you want to trigger the insertion
			      insertAdditionalSentences();
			      window.removeEventListener("scroll", checkScrollDistance); // remove the event listener to prevent multiple insertions
			    }
			  }

			  // insert the additional sentences
			  function insertAdditionalSentences() {
			    const paragraph = document.querySelector('p');
			    const sentences = paragraph.innerHTML.split('. '); // split the paragraph into sentences
			    const randomIndex1 = Math.floor(Math.random() * sentences.length); // generate 3 random indices
			    const randomIndex2 = Math.floor(Math.random() * sentences.length);
			    const randomIndex3 = Math.floor(Math.random() * sentences.length);
			    sentences.splice(randomIndex1 + 1, 0, `<span class="additional-sentence">${additionalSentences[0]}.</span>`); // insert the additional sentences
			    sentences.splice(randomIndex2 + 1, 0, `<span class="additional-sentence">${additionalSentences[1]}.</span>`);
			    sentences.splice(randomIndex3 + 1, 0, `<span class="additional-sentence">${additionalSentences[2]}.</span>`);
			    paragraph.innerHTML = sentences.join('. '); // join the sentences back into a paragraph
			    const additionalSentenceElements = document.querySelectorAll('.additional-sentence');
			    const delay = 100;
			    additionalSentenceElements.forEach(function(element) {
			      typeWriterEffect(element, element.innerHTML, delay);
			    });
			    additionalSentenceElements.forEach(function(element) {
			      element.style.display = 'inline-block';
						element.style.fontStyle = 'italic';
			    });
			  }

			  // add the event listener for the scroll event
			  window.addEventListener("scroll", checkScrollDistance);
		</script>
</head>
<body onmousemove="changeBackground(event)">
	<script>
			function changeBackground(event) {
				try {
					// Get the position of the mouse cursor
					let x = event.clientX;
					let y = event.clientY;

					// Calculate the background color based on the position of the mouse
					let halfWidth = window.innerWidth / 2.1;
					let color = (x < halfWidth) ? "whitesmoke" : "#080808";

					// Set the background color of the body
					document.body.style.backgroundColor = color;
				} catch (error) {
					console.error(error);
				}
			}
		</script>
